
<h1>
    <%= title %>
</h1>

<section id="fee-posts">
    <h4>Posts</h4>
    <% if(locals.user){ %>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="3"></textarea>
            <input type="Submit" value="Post">
        </form>
    <%}%>
    <div id="posts-List-container">
        <ul>
            <% for(post of posts){ %>
                <li> 
                    <%-include('_post')-%> 
                </li>
            <%}%>
        </ul>  
    </div>

</section> 